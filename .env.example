# Mobile.de Scraper Configuration
# Copy this file to .env and update values

# API Configuration
API_TOKEN=your-secure-token-here-change-this
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DB_URL=postgresql://scraper:scraper123@localhost/mobile_scraper
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Scraper Configuration
SCRAPER_DELAY=2
MAX_PAGES=10
HEADLESS_MODE=true
WORKER_INTERVAL_HOURS=6

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Chrome Configuration (optional)
CHROME_BINARY_PATH=
CHROMEDRIVER_PATH=

# Deployment Environment
ENVIRONMENT=development
# Options: development, staging, production
